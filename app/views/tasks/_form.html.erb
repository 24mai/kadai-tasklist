<%= form_with(model: task, local:true) do |f| %>

  <% if task.errors.any? %>
    <div id="error_explnation">
      <ul>
        <% task.errors.full_tasks.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%=f.label :content, 'タスク　　' %>

  <%=f.text_field :content %>
  
  <br/>

  <%=f.label :status, 'ステータス' %>

  <%=f.text_field :status %>
  
  <br/>
  
  <%= f.submit '投稿' %>

<% end %>